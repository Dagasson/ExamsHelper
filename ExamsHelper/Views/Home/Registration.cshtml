@model IEnumerable<ExamsHelper.Models.Univers>
@{
    ViewData["Title"] = "Sign Up";
}

@section scripts{
    <script type="text/javascript">
    $(function () {

        $('#univer').change(function()
        {
            // получаем выбранный id
            var id = $(this).val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetFacultiesOfUnivers")/' + id,
                success: function (data) {

                    // заменяем содержимое присланным частичным представлением
                    $('#facultyid').replaceWith(data);
                }
            });
        });
    })
    </script>
}



    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>ExamsHelper</title>
        <link rel="stylesheet" href="~/css/style.css" />
    </head>

    <body style="background-color:darkgray">
        <div style="margin-top:40px;" class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <h5 class="text-center">
                                <h1>Sign Up </h1>
                            </h5>
                            <form method="post" class="form form-signup" role="form">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                                        <input type="text" name="login" class="form-control" placeholder="Login" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-envelope"></span>
                                        </span>
                                        <input type="text" class="form-control" name="email" placeholder="Email Address" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                                        <input type="password" class="form-control" name="password" placeholder="Password" />
                                    </div>
                                </div>
                                <div>
                                    <select class="form-control form-control-lg"  name="univer" asp-items="ViewBag.univers" id="univer"></select>
                                    </div>
                                <br />
                                <div>
                                <select class="form-control form-control-lg" name="faculty" asp-items="ViewBag.faculties" id="facultyid"></select>
                                </div>
                                <div asp-validation-summary="ModelOnly"></div>
                       <br />
                        <div class="form-group">
                            <input asp-action="SignUp" asp-controller="Home" type="submit" class="btn btn-lg btn-primary btn-block" value="Sign Up">
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </body>
    </html>


