
@{
    ViewData["Title"] = "Sign In";
}

<html lang="en">


<head>
    <meta charset="UTF-8">
    <title>ExamsHelper</title>
    <style>
    body {
    --main-font: 'Roboto', sans-serif;
    --header-font: 'Anton', sans-serif;
    --main-color: #2e6da4;
    --light-color: #337ab7;
    --white: #fff;
    --black: #222;
    --gray: #888;
    --dark-white: #f5f5f5;
    --shadow: 0px 0px 6px 2px var(--dark-white);
    --space: 15px;
    --screw: 4px;
    --link-color: #77acd9;
    background-color: var(--white) !important;
    color: var(--black) !important;
    }

    h1, h2, h3, h4, h5, h6, .logo {
    font-family: var(--header-font);
    text-transform: uppercase;
    margin-top: 0;
    }

    .logo {
    font-size: 1.6em;
    }

    a {
    color: var(--light-color);
    }

    td {
    color: var(--black);
    }

    .shadow {
    box-shadow: var(--shadow);
    }

    form.controlled > * {
    margin-bottom: var(--space);
    }

    footer {
    background-color: var(--black);
    color: var(--white);
    height: 40px;
    display: flex !important;
    justify-content: center;
    align-items: flex-end;
    box-shadow: var(--shadow);
    }

    .spaced-bottom {
    margin-bottom: var(--space);
    }

    button,
    input[type='submit'],
    input[type='button'] {
    background-color: var(--light-color) !important;
    border-color: var(--main-color) !important;
    color: var(--white) !important;
    border-radius: var(--screw);
    }

    .navbar-brand {
    color: var(--white) !important;
    transition: all .3s;
    }

    .navbar-brand:hover {
    color: var(--link-color) !important;
    }

    .navbar-inverse {
    max-height: 40px;
    box-shadow: var(--shadow);
    }

    .profile .dropdown-toggle {
    color: var(--white) !important;
    max-height: 40px;
    border: 0;
    }

    .dropdown-menu {
    box-shadow: none;
    }

    .profile .dropdown-toggle:hover {
    background-color: var(--black) !important;
    }

    .body-content {
    min-height: calc(100vh - 110px);
    }
    </style>
</head>

<body>
    <div class="container" style="margin-top:40px">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                       <h2 class="spaced-bottom"> Sign In to continue </h2>
                    </div>
                    <div class="panel-body">
                        <form role="form" method="POST">
                            <fieldset>

                                <div class="row">
                                    <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                        <div class="form-group">
                                            <h4>Login</h4>
                                            <div class="input-group">

                                                <span class="input-group-addon">
                                                    <i class="glyphicon glyphicon-user"></i>
                                                </span>

                                                <input class="form-control" placeholder="Username" name="login" type="text" autofocus>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <h4>Password</h4>
                                            <div class="input-group">

                                                <span class="input-group-addon">
                                                    <i class="glyphicon glyphicon-lock"></i>
                                                </span>
                                                <input class="form-control" placeholder="Password" name="password" type="password" value="">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input asp-action="Authorization" asp-controller="Home" type="submit" class="btn btn-lg btn-primary btn-block" value="Sign In">
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="clearfix"></div>
                            <div asp-validation-summary="ModelOnly"></div>
                        </form>
                    </div>
                    <div class="panel-footer ">
                        <h4> Don't have an account! <a asp-action="Reg" asp-controller="Home" onClick=""> Sign Up Here </a></h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
</html>


