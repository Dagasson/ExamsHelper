
@{
    ViewData["Title"] = "Authorization";
}

<html lang="en">

<div class="span3">
    <h2>Sign In</h2>
    <form method="post" asp-controller="Home" asp-action="Authorization">
        <label>Login</label>
        <input type="text" name="login" class="span3">
        <label>Password</label>
        <input type="password" name="password" class="span3">
        <input asp-controller="Home" asp-action="Authorization" type="submit" value="Sign In" class="btn btn-primary pull-right">
        <div class="clearfix"></div>
        <div asp-validation-summary="ModelOnly"></div>
    </form>
</div>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/css/normalize.css">
    <link rel="stylesheet" href="~/css/style.css">
    <title>ExamsHelper</title>
</head>

<body style="">
    <div class="login-popup">
        <div class="login-popup__menu">
            <h3 class="login-popup__title">ExamsHelper</h3>
            <div class="button-wrapper">
                <button id="loginBtn" class="button button--styled">Log in</button>
                <button id="signBtn" class="button button--styled">Sign up</button>
            </div>
        </div>
        <div class="login-popup__content">

        </div>
        <script src="~/js/main.js"></script>
</body>

</html>


