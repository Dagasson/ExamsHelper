
@{
    ViewData["Title"] = "Create";
}

<html>
<head>
    <style>


        body {
            --from-static-width: 420px;
            --main-font: 'Roboto', sans-serif;
            --header-font: 'Anton', sans-serif;
            --main-color: #2e6da4;
            --light-color: #337ab7;
            --white: #fff;
            --black: #222;
            --gray: #888;
            --dark-white: #f5f5f5;
            --shadow-color: #eee;
            --shadow: 0px 0px 8px 2px var(--shadow-color);
            --space: 15px;
            --screw: 4px;
            background-color: var(--white) !important;
            color: var(--black) !important;
            font-family: var(--main-font) !important;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: var(--header-font);
            text-transform: uppercase;
            margin-top: 0;
        }

        td {
            color: var(--black);
        }

        .logo {
            color: var(--white);
        }

        .shadow {
            box-shadow: var(--shadow);
        }

        form.controlled > * {
            margin-bottom: var(--space);
        }

        .spaced-bottom {
            margin-bottom: var(--space);
        }

        button,
        input[type='submit'],
        input[type='button'] {
            background-color: var(--light-color) !important;
            border-color: var(--main-color) !important;
            color: var(--white) !important;
            border-radius: var(--screw);
            text-transform: uppercase;
        }


        form {
            display: flex;
            flex-direction: column;
        }

            form > * {
                margin-bottom: var(--space);
            }

        .form-wrapper {
            box-shadow: var(--shadow);
            width: var(--from-static-width);
            margin: auto;
        }
    </style>
</head>
<body>
    <div style="margin-top:40px;" class="container">
        <div class="row">
                    <div class="panel-body form-wrapper">
   
                            <h2 class="spaced-bottom">Create Subject</h2>

                            <form method="post">
                                <h4> Name</h4>
                                <input class="form-control" type="text" name="nameSubj">

                                <h4>  Teacher</h4>
                                <input class="form-control" type="text" name="teacher">

                                <h4> Specialization</h4>
                                <input class="form-control" type="text" name="spec">

                                <div asp-validation-summary="ModelOnly"></div>
                                <input class="btn btn-warning" asp-action="Create" asp-controller="Subjects" type="submit" value="Create Question" />
                            </form>
                    </div>
                </div>
            </div>
</body>

</html>

